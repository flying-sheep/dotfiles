// https://xkbcommon.org/doc/current/user-configuration.html

default partial alphanumeric_keys xkb_symbols { include "us(basic)" };

partial alphanumeric_keys
xkb_symbols "mac_normal" {
    include "us(mac)"

    name[Group1] = "English (Macintosh normal)";

    key <LSGT> { [   section,  plusminus,       section,        plusminus ] };
    key <TLDE> { [     grave, asciitilde,    dead_grave,        dead_horn ] };
};
